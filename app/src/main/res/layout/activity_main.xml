<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Виберіть піцу"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/pizzaGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/pizzaMargherita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Маргарита"/>

        <RadioButton
            android:id="@+id/pizzaPepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пепероні"/>

        <RadioButton
            android:id="@+id/pizzaHawaiian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Гавайська"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Виберіть додатки"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/extraCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Додатковий сир"/>

    <CheckBox
        android:id="@+id/extraOlives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оливки"/>

    <CheckBox
        android:id="@+id/extraPepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перець"/>

    <Button
        android:id="@+id/orderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Замовити"
        android:layout_marginTop="24dp"/>
</LinearLayout>
